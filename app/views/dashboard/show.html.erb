<div ng-app='timeApp'>
	<div ng-controller="EntriesCtrl">
	  <nav class="navbar navbar-default navbar-color" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          
        </div>
      
      <h1 class="title animated rotateInDownLeft">{{ view.title }}</h1>
      <img class="clock-tower animated fadeInRight" src="/assets/clocktower.gif" />
      
      
      </div>
      
    </nav>

	  <div class="row">
  	  <div class="col-lg-2 col-lg-offset-2 time-box">
  	  	<h3 class="time-box-text">hours today</h3>
  	  	<h1 class="time">{{ total_today() }}</h1>
  	  </div>
      <div class="col-lg-2 col-lg-offset-1 time-box">
        <h3 class="time-box-text">hours to date</h3>
        <h1 class="time">{{ total() }}</h1>
      </div>
  	  <div class="col-lg-2 col-lg-offset-1 time-box">
  	  	<h3 class="time-box-text">hours his week</h3>
  	  	<h1 class="time">{{ total_week() }}</h1>
  	  </div>
    </div>
	  
	  
	  <form ng-submit="addEntry()">
  	  <div class="row">	

        <div class="input-group input-group-lg form-field col-lg-2 col-lg-offset-1">
          <h3>Date: </h3>
          <input type="date" class="form-control" placeholder="" ng-model="view.newEntry.date" />
        </div>

  		  <div class="input-group input-group-lg form-field col-lg-1">
  		  	 <h3>Hours: </h3>
  		  	 <input type="number" class="form-control" min="0" max="8" placeholder="0" ng-model="view.newEntry.hours" /> 
  		  </div>

  		  <div class="input-group input-group-lg form-field col-lg-1">
  		  	<h3>Minutes:</h3> 
  		  	<input type="number" class="form-control bfh-number" min="0" max="59" placeholder="0" ng-model="view.newEntry.minutes" />
  		  </div>

  		  <div class="input-group input-group-lg form-field col-lg-3">
  		  	<h3>Project:</h3> 
  		  	<input type="text" value="stuff and such" class="form-control" ng-init="view.newEntry.project='TA'" ng-model="view.newEntry.project" /> 
  		  </div>

        <div class="input-group input-group-lg form-field col-lg-2">
          <h3>Comment: </h3>
          <input type="text" class="form-control" placeholder="I love this job" ng-model="view.newEntry.comment" /> 
        </div>
  		  <div class="input-group input-group-lg form-field col-lg-1">
  		  	<h3>Save: </h3>
  		  	<input  type="submit" class="form-control btn btn-primary btn-lg " value="Add Entry" />
  		  </div>
  		</div>
		</form>

	  <hr/>
	  
	  <div class="row">
      <div class="col-lg-8 col-lg-offset-1">
  	  	<span>Select date Range:</span>
        <div class="input-group input-group-lg form-field col-lg-2">
          From <input class="form-control" type="date" ng-model="from_date" />
        </div>
        <div class="input-group input-group-lg form-field col-lg-2">
  	  		To <input class="form-control" style='display:inline;' type="date" ng-model="to_date" />
        </div>  
  	  </div>
  	</div>

    

	  <div class="row" ng-repeat="entry in view.entries | orderBy: 'created_at':true | filter:dateFilter">
	    <div class="col-md-10 col-md-offset-1">
				<div class="row">
          <div class="input-group input-group-lg form-field col-lg-2 col-lg-offest-1"> 
		    		<input class="form-control" type="text" class="form_control" ng-model="entry.date" />
          </div>

          <div class="input-group input-group-lg form-field col-lg-1">
		    		<input class="form-control" min="0" max="8" type="number" ng-model="entry.hours" />
          </div>

          <div class="input-group input-group-lg form-field col-lg-1">
		    		<input class="form-control" min="0" max="59" type="number" ng-model="entry.minutes" />
          </div> 

          <div class="input-group input-group-lg form-field col-lg-2"> 
		    		<input class="form-control" type="text"	ng-model="entry.project" />
          </div>

          <div class="input-group input-group-lg form-field col-lg-2">  
		    		<input class="form-control" type="text" ng-model="entry.comment" />   
		    	</div>

		    	<div class="input-group input-group-lg form-field ">
		    	 <button class="btn btn-success btn-lg form-control" value="Save" ng-click="entry.$update()">
           <span class="glyphicon glyphicon-ok"></span>
           </button>
		    	</div>

          <div class="input-group input-group-lg form-field">
            <button class="btn btn-danger btn-lg form-control" ta-confirmatron="Are you sure?" ng-click="$parent.delete(entry, $index)">
              <span class="glyphicon glyphicon-remove"></span>
            </button>
          </div>
        
	    	</div>	    
	  </div>
	</div>	
</div>
