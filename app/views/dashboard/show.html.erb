<div ng-app='timeApp'>
	<div ng-controller="EntriesCtrl">
	  <nav class="navbar navbar-default" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          </button>
        </div>
      <div class="marquis title">
        <h1 class="title animated rotateInDownLeft">{{ view.title }}</h1>
      </div>
      </div>
      <div><img class="clock-tower animated fadeInRight" src="/assets/clockTower_logo.png" /></div>
    </nav>

	  <div class="row">
  	  <div class="col-lg-2 col-lg-offset-2 time-box">
  	  	<h3 class="time-box-text">hours today</h3>
  	  	<h1 class="time">{{ total_today() }}</h1>
  	  </div>
      <div class="col-lg-2 col-lg-offset-1 time-box">
        <h3 class="time-box-text">hours to date</h3>
        <h1 class="time">{{ total() }}</h1>
      </div>
  	  <div class="col-lg-2 col-lg-offset-1 time-box">
  	  	<h3 class="time-box-text">hours his week</h3>
  	  	<h1 class="time">{{ total_week() }}</h1>
  	  </div>
    </div>
	  
	  
	  <form ng-submit="addEntry()">
  	  <div class="row">	

        <div class="input-group input-group-lg form-field col-lg-2 col-lg-offset-1">
          <h3>Date: </h3>
          <input type="date" class="form-control" placeholder="" ng-model="view.newEntry.date" />
        </div>

  		  <div class="input-group input-group-lg form-field col-lg-1">
  		  	 <h3>Hours: </h3>
  		  	 <input type="number" class="form-control" min="0" max="8" placeholder="0" ng-model="view.newEntry.hours" /> 
  		  </div>

  		  <div class="input-group input-group-lg form-field col-lg-1">
  		  	<h3>Minutes:</h3> 
  		  	<input type="number" class="form-control bfh-number" min="0" max="59" placeholder="0" ng-model="view.newEntry.minutes" />
  		  </div>

  		  <div class="input-group input-group-lg form-field col-lg-3">
  		  	<h3>Project:</h3> 
  		  	<input type="text" class="form-control" placeholder="TA" ng-model="view.newEntry.project" /> 
  		  </div>

        <div class="input-group input-group-lg form-field col-lg-2">
          <h3>Comment: </h3>
          <input type="text" class="form-control" placeholder="I love this job" ng-model="view.newEntry.comment" /> 
        </div>
  		  <div class="input-group input-group-lg form-field col-lg-1">
  		  	<h3>Save: </h3>
  		  	<input  type="submit" class="form-control btn btn-primary btn-lg " value="Add Entry" />
  		  </div>
  		</div>
		</form>

	  <hr/>
	  
	  <form>
	  	<h2>
        Filter by date:	Date From: <input  type="date" ng-model="from_date" />
	  		Date To: <input style='display:inline;' type="date" ng-model="to_date" />
	  	</h2>
  	</form>
	  <div class="row" ng-repeat="entry in view.entries | orderBy: 'created_at':true | filter:dateFilter">
	    <div class="col-md-10 col-md-offset-1">
        <!-- <div class="input-group input-group-lg col-lg-3">
          <input type="text" class="form-control">
        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span><span class="glyphicon glyphicon-time"></span><span class="glyphicon glyphicon-wrench"></span>
        </div> -->
				<div class="row">
          <div><p type="text"  ng-model="entry.date">{{entry.date}}</p></div>

		      <div class="input-group input-group-lg form-field col-lg-2 col-lg-offest-1"> 
		    		<p>Date:</p> <input class="form-control" type="text" class="form_control" ng-model="entry.date" />
          </div>

          <div class="input-group input-group-lg form-field col-lg-1">
		    		<p>Hours:</p><input class="form-control" min="0" max="8" type="number" ng-model="entry.hours" />
          </div>

          <div class="input-group input-group-lg form-field col-lg-1">
		    		<p>Minutes:</p> <input class="form-control" min="0" max="59" type="number" ng-model="entry.minutes" />
          </div> 

          <div class="input-group input-group-lg form-field col-lg-2"> 
		    		<p>Project:</p><input class="form-control" type="text"	ng-model="entry.project" />
          </div>

          <div class="input-group input-group-lg form-field col-lg-2">  
		    		<p>Comment:</p> <input class="form-control" type="text" 		ng-model="entry.comment" />   
		    	</div>

		    	<div class="input-group input-group-lg form-field col-lg-1">
		    	 <p>save</p> <input class="form-control btn btn-default btn-lg" type="submit" value="Save" ng-click="entry.$update()" /> 
		    	 </div>

          <div class="input-group input-group-lg form-field col-lg-1">
             <p>delete</p> <input class="form-control btn btn-default btn-lg" type="submit" value="Delete" ta-confirmatron="Are you sure?" ng-click="$parent.delete(entry, $index)" />
          </div>
	    	</div>
