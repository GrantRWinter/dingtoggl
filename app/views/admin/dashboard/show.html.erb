<head>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
 <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" rel="stylesheet">
  <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application", controller_name %>
  <%= csrf_meta_tags %>	 
</head>


<body>
  <nav class="navbar navbar-default navbar-color" role="navigation">
    <div class="container-fluid">
      <h1 class="title animated rotateInDownLeft">Clocktower</h1>
      <img class="clock-tower animated fadeInRight" src="/assets/clocktower.gif" />
    </div>
  </nav>


<section class="container">
  <table class="table table-striped table-bordered table-hover">
    <caption><h2>Administration Panel</h2></caption>
    <tr>
      <th>User ID</th>
      <th>Hours</th>
      <th>Minutes</th>
      <th>Date</th> 
      <th>Project</th>
      <th>Comment</th>
      
    <% @entries.each do |entry| %>
      </tr> 
        <td><%= entry.user_id %> </td>
        <td><%= entry.hours %> </td>
        <td><%= entry.minutes %> </td>
        <td><%= entry.date %> </td> 
        <td><%= entry.project %> </td>
        <td><%= entry.comment %> </td>
      </tr>
  <% end %>
  <caption><h3>Summary of Hours: <%= @sum_of_hours %>&nbsp;&nbsp;&nbsp;   Summary of Minutes: <%= @sum_of_mins %></h3></caption>
  </table>
</section>


</body>